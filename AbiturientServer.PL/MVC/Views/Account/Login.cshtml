@model AbiturientServer.PL.MVC.ViewModels.Account.LoginViewModel

<h2>Вход в приложение</h2>
<form method="post" asp-route="MvcLoginPost"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="Войти" />
    </div>
</form>
<p><a asp-route="MvcRecoveryPasswordGet">Забыли пароль?</a></p>